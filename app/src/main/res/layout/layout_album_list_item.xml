<?xml version="1.0" encoding="utf-8"?>
<com.sinaseyfi.kiliaroalbum.utils.SquareGridConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="80dp"
    tools:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintDimensionRatio="1"
    tools:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/grid_items_corner_radius">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/thumbnailIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="@string/shared_element_album_image_tag"
            android:scaleType="centerCrop"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sizeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/thumbnail_layout_overlay_background"
            android:gravity="start"
            tools:textColor="@color/white"
            tools:text="12 MB"
            android:layout_gravity="bottom"/>

    </com.google.android.material.card.MaterialCardView>

</com.sinaseyfi.kiliaroalbum.utils.SquareGridConstraintLayout>